<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.listingconfirmation.LisitingConfirmationFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/confirmation_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/listingPrimary">

        <ImageView
            android:id="@+id/indicator_circle"
            android:layout_width="372dp"
            android:layout_height="438dp"
            android:layout_marginStart="76dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/ic_circle"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/indicator_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bowlby_one_sc"
            android:text="1"
            android:textSize="160pt"
            android:translationX="-50dp"
            android:translationY="180dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/foodStopName"
            android:layout_width="221dp"
            android:layout_height="34dp"
            android:layout_marginTop="144dp"
            android:maxLines="2"

            android:text="TextView"
            android:textColor="@color/colorWhite"
            android:textSize="12pt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/foodStopAddress"
            app:layout_constraintTop_toTopOf="@+id/indicator_circle" />

        <TextView
            android:id="@+id/foodStopAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:layout_marginTop="0dp"
            android:text="TextView"
            android:textSize="5pt"
            android:textColor="@color/colorWhite"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.08"
            app:layout_constraintStart_toStartOf="@+id/indicator_circle"
            app:layout_constraintTop_toBottomOf="@+id/foodStopName" />

        <TextView
            android:id="@+id/confCode"
            android:layout_width="135dp"
            android:layout_height="37dp"
            android:layout_marginTop="44dp"
            android:background="@color/colorWhite"
            android:text="ConfirmationCode"
            android:textSize="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.919"
            app:layout_constraintStart_toStartOf="@+id/indicator_circle"
            app:layout_constraintTop_toBottomOf="@+id/foodStopName" />

        <Button
            android:id="@+id/doneButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Done"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.65"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/confCode"
            app:layout_constraintVertical_bias="0.737" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="125dp"
            android:layout_height="28dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="28dp"
            android:background="@color/colorWhite"
            android:text="Confirmation Code: "
            android:textSize="10dp"
            app:layout_constraintStart_toStartOf="@+id/indicator_circle"
            app:layout_constraintTop_toBottomOf="@+id/foodStopAddress" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>