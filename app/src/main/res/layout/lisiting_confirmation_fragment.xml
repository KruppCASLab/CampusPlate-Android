<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.listingconfirmation.LisitingConfirmationFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/confirmation_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/indicator_circle"
            android:layout_width="372dp"
            android:layout_height="438dp"
            android:layout_marginStart="84dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_circle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/indicator_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="238dp"
            android:layout_marginEnd="208dp"
            android:fontFamily="sans-serif"
            android:text="1"
            android:textSize="200pt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/indicator_circle" />

        <TextView
            android:id="@+id/foodStopName"
            android:layout_width="250dp"
            android:layout_height="64dp"
            android:layout_marginTop="144dp"
            android:text="TextView"
            android:textColor="@color/colorWhite"
            android:textSize="20pt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/foodStopAddress"
            app:layout_constraintTop_toTopOf="@+id/indicator_circle" />

        <TextView
            android:id="@+id/foodStopAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:layout_marginTop="4dp"
            android:text="TextView"
            android:textSize="5pt"
            android:textColor="@color/colorWhite"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.08"
            app:layout_constraintStart_toStartOf="@+id/indicator_circle"
            app:layout_constraintTop_toBottomOf="@+id/foodStopName" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>